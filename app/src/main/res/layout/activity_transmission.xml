<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Transmission">

    <com.skyfishjy.library.RippleBackground
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content"
            app:rb_color="@color/colorAccent"
            app:rb_radius="32dp"
            app:rb_rippleAmount="4"
            app:rb_duration="3000"
            app:rb_scale="6">>

    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:id="@+id/sendBtn"
            android:text="TRANSMIT"
            android:textColor="#ffffff"
            android:background="@drawable/roundedbutton"
            app:layout_constraintBottom_toBottomOf="@+id/content"
            app:layout_constraintEnd_toEndOf="@+id/content" app:layout_constraintStart_toStartOf="@+id/content"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/content"/>


        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Broadcasting Signal"
                android:textAlignment="center"
                android:ems="10"
                android:id="@+id/listening" android:layout_alignParentBottom="true" android:layout_marginBottom="590dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="92dp" android:layout_marginTop="96dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:background="@null"
                android:layout_marginStart="106dp"/>
    </com.skyfishjy.library.RippleBackground>

</android.support.constraint.ConstraintLayout>